// ==================================================
// 定制
// ==================================================

html
body
  overflow-x hidden
body
  margin 0
  font-family font-stack
  font-size font-size
  color font-color
  line-height line-height
  background-color white

// 超链接
// ------------------------------
a
  color link-color
  text-decoration none

  &:hover
    color link-color-hover
    text-decoration underline

// 斜体
// ------------------------------
i
  font-style normal

// 列表
// ------------------------------
ul
ol
  padding 0
  margin 0 0 10px 20px

ul ul
ul ol
ol ol
ol ul
  margin-bottom 0

li
  line-height 1.5

// 表单元素
// ------------------------------

// 移除input和textarea元素默认的聚焦样式
input:focus
textarea:focus
  outline none
